<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.additional">
            <block name="datatrics.pixel.product"
                   ifconfig="datatrics_connect/tracking/product"
                   class="Magento\Framework\View\Element\Template"
                   after="datatrics.pixel.base"
                   template="Datatrics_Connect::pixel.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">
                        Datatrics\Connect\ViewModel\PreProcessor
                    </argument>
                    <argument name="script_template" xsi:type="string">
                        Datatrics_Connect::product.phtml
                    </argument>
                    <argument name="variable_collector" xsi:type="string">product</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
